# Server Configuration
PORT=3000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=SECRET
JWT_EXPIRATION=3600s

# Service Endpoints (for service discovery)
AUTH_SERVICE_URL=http://localhost:4000
GAME_EVENT_SERVICE_URL=http://localhost:5000

# Redis Configuration
REDIS_HOST=redis://localhost:6379

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100
THROTTLE_BLOCK_DURATION=300

# Logging
LOG_LEVEL=log
